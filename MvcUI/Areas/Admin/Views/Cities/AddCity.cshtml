@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BusinessLayer.Models.CityViewModel
@{
    ViewData["Title"] = "Add City";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-6">
    <h2>Şehir ekleme sayfası.</h2>
    <form method="post" enctype="multipart/form-data" class="pt-4">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Şehir</label>
            <div class="col-sm-10">
                <input type="text" asp-for="@Model.Name" class="form-control" required="required">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-6 text-right">
                <button type="submit" class="btn btn-success"
                        asp-area="Admin" asp-controller="Cities" asp-action="AddCity">
                    Ekle
                </button>
            </div>
            <div class="col-sm-6">
                <a class="btn btn-danger" asp-area="Admin" asp-controller="Cities" asp-action="Index">İptal</a>
            </div>
        </div>
    </form>
</div>
