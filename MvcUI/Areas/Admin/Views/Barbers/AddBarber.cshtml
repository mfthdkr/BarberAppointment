@model BusinessLayer.Models.BarberInputViewModel
@{
    ViewData["Title"] = "AddBarber";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var cities = ViewData["Cities"] as SelectList;
}

<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label class="col-sm-2 col-form-label">Berber</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="@Model.Name" class="form-control" required="required">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 col-form-label">Görsel</label>
                <input type="file" name="Image" />
            </div>
           
            <div class="form-group">
                <label class="col-sm-2 col-form-label">Şehir</label>
                <div class="col-sm-10">
                    <select asp-for="@Model.CityId" class="form-control" asp-items="@cities">
                    </select>
                    <span asp-validation-for="CityId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 col-form-label">Adres</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="@Model.Address" class="form-control" required="required">
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-6 text-right">
                    <button type="submit" class="btn btn-success"
                            asp-area="Admin" asp-controller="Barbers" asp-action="AddBarber">
                        Ekle
                    </button>
                </div>
                <div class="col-sm-6">
                    <a class="btn btn-danger" asp-area="Admin" asp-controller="Barbers" asp-action="Index">İptal</a>
                </div>
            </div>
        </form>
    </div>
</div>

