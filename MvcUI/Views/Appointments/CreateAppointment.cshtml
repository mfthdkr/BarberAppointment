@model BusinessLayer.Models.AppointmentViewModel

@{
    ViewData["Title"] = "CreateAppointment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p> Randevu alma sayfası</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateAppointment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BarberId" class="control-label"></label>
                <input hidden="" asp-for="BarberId" class="form-control" />
                <span asp-validation-for="BarberId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateTime" class="control-label"></label>
                <input type="datetime-local" asp-for="DateTime" class="form-control" />
                <span asp-validation-for="DateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Appointments" asp-action="Index">Back to List</a>
</div>



