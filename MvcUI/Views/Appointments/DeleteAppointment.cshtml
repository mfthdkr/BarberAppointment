@model BusinessLayer.Models.AppointmentViewModel

@{
    ViewData["Title"] = "DeleteAppointment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>Randevuyu iptal etmek üzeresiniz.</p>
<hr />
<div>


    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BarberName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BarberName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BarberCityName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BarberCityName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BarberAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BarberAddress)
        </dd>
    </dl>
</div>
<div>
    <form method="post">
        <button type="submit" class="btn btn-outline-danger"
                asp-area="" asp-controller="Appointments" asp-action="DeleteAppointmentPost" asp-route-id="@Model.Id">
            Randevuyu iptal et.
        </button>
    </form>
    <div class="ml-5">
        <a class="btn btn-outline-success" asp-area="" asp-controller="Appointments" asp-action="Index">İptal etme.</a>
    </div>
</div>


